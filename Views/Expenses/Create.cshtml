@model Expense
@{
    ViewData["Title"] = "Добавить расход";
}


<h2>Добавить расход</h2>

<form asp-action="Create">
    <div class="form-group">
        <label>Дата</label>
        <input asp-for="Date" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Категория</label>
        <select asp-for="CategoryId" asp-items="ViewBag.CategoryId" class="form-control" required></select>
    </div>
    <div class="form-group">
        <label>Сумма</label>
        <input asp-for="Amount" class="form-control" type="number"  required />
    </div>
    <div class="form-group">
        <label>Комментарий</label>
        <input asp-for="Comment" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Сохранить</button>
</form>
